extends layout
block append styles
  link(rel='stylesheet',href='/stylesheets/main.css')
block append scripts
  script(src="/javascripts/auth.js")  
block content
  .row.justify-content-center
    .col-md-3.my-md-5
      h1.text-center Register
      form#registerForm(action="/auth/register",method="post")
        .form-group
          label(for="firstName") First name
          input#firstName.form-control(type='text', name="firstName")
        .form-group
          label(for="lastName") Last name
          input#lastName.form-control(type='text', name="lastName")  
        .form-group
          label(for='email') Email address
          input#email.form-control(type='email',name="email")
          #mailNotify.invalid-feedback.d-none          
        .form-group
          label(for='password') Password
          input#password.form-control(type='password',name="password")
          #passwordNotify.d-none
        .form-group
          label(for='password2') Repeat password
          input#password2.form-control(type='password',name="password2")
          #passwordsNotify.d-none
        if errors          
          .alert.alert-danger(role='alert')
            each error in errors 
              =error                
        button.btn.btn-primary.mx-auto(type='submit') Register here
